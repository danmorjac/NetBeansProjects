<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UsaDataSource</servlet-name>
        <servlet-class>Servlets.UsaDataSource</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MostrarClientesFactura</servlet-name>
        <servlet-class>Servlets.MostrarClientesFactura</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MostrarClienteFacturas</servlet-name>
        <servlet-class>Servlets.MostrarClienteFacturas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsarDataSource</servlet-name>
        <servlet-class>Servlets.UsarDataSource</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsaConexionDB</servlet-name>
        <servlet-class>Servlets.UsaConexionDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MostrarClientesFacturasDB</servlet-name>
        <servlet-class>Servlets.MostrarClientesFacturasDB</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsaDataSource</servlet-name>
        <url-pattern>/UsaDataSource</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostrarClientesFactura</servlet-name>
        <url-pattern>/MostrarClientesFactura</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostrarClienteFacturas</servlet-name>
        <url-pattern>/MostrarClienteFacturas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsarDataSource</servlet-name>
        <url-pattern>/UsarDataSource</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsaConexionDB</servlet-name>
        <url-pattern>/UsaConexionDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostrarClientesFacturasDB</servlet-name>
        <url-pattern>/MostrarClientesFacturasDB</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>jdbc/ClienteDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <resource-ref>
        <res-ref-name>jdbc/ClienteDSAlt</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
